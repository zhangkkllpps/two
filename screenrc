#terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#terminfo xterm* 'XT:hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
autodetach on       # default: on
altscreen on
defscrollback 8192
msgwait 5
msgminwait 2
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
startup_message off # default: on
vbell off
vbell_msg "   Wuff  ----  Wuff!!  "
nethack on
defutf8 on
shell /bin/bash
#termcapinfo * ti@:te@
termcapinfo * ti@:cs
bindkey -k F1 prev
bindkey -k F2 next
multiuser on
addacl <user>
#aclumask <user>+r <user>-w <user>-x
aclumask <user>+r <user>+w <user>-x
#aclchg <user> +r-w-x "#?"
aclchg <user> +r-w-x 
aclchg <user> +x "#,prev,next,select,detach"
term screen-256color

terminfo * k1=\EOP
terminfo * k2=\EOQ
terminfo * k3=\EOR
terminfo * k4=\EOS
